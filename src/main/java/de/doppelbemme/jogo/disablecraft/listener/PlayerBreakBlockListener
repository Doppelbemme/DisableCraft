

@EventHandler
public onBlockBreak(PlayerBreakBlockEvent event) {
  Player player = event.getPlayer();
  
  if(event.getBlock().getType() != "Melon_Block" && event.getBlock().getType() != "Pumpkin") {
    return;
  }
  
 String blockBroken;
 //TODO: Maybe change to a switch case instead
 if(event.getBlock().getType() == "Melon_Block") {
    if(!FarmLeaderBoard.getInstance().melonFarmStats.contains(player.getUniqueID)){
      FarmLeaderboard.getInstance().melonFarmStats.put(player.getUniqueID, 0);
    }
   FarmLeaderboard.getInstance().melonFarmStats.put(player.getUniqueID, FarmLeaderboard.getInstance().melonFarmStats.get(player.getUniquieID)+1);
 }else if(event.getBlock().getType() == "Pumpkin) {
      if(!FarmLeaderBoard.getInstance().pumpkinFarmStats.contains(player.getUniqueID)){
      FarmLeaderboard.getInstance().pumpkinFarmStats.put(player.getUniqueID, 0);
    }
   FarmLeaderboard.getInstance().pumpkinFarmStats.put(player.getUniqueID, FarmLeaderboard.getInstance().pumpkinFarmStats.get(player.getUniquieID)+1);
 }
}
